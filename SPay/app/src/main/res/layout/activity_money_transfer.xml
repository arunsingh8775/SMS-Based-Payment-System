<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/DarkSeaGreen"
    tools:context=".TransferMoney"
    android:id="@+id/back">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="45dp"
        android:text="TRANSFER MONEY"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textStyle="bold"
        android:id="@+id/transfer"
        android:textColor="@color/Purple"
        />


    <Button
        android:layout_width="240dp"
        android:layout_height="80dp"
        android:layout_marginTop="60dp"
        android:textAlignment="center"
        android:layout_below="@+id/amount"
        android:id="@+id/btn"
        android:text="SUBMIT"
        android:textColor="@color/MidnightBlue"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:textStyle="bold"
        android:background="@color/Plum"
        />

    <Button
        android:layout_width="240dp"
        android:layout_height="80dp"
        android:textAlignment="center"
        android:layout_below="@+id/btn"
        android:id="@+id/balancereq"
        android:textColor="@color/MidnightBlue"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="REQUEST BALANCE"
        android:textSize="30dp"
        android:textStyle="bold"
        android:background="@color/Plum"
        />

    <TextView
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/transfer"
        android:layout_marginTop="25dp"
        android:id="@+id/recipient"
        android:layout_marginLeft="20dp"
        android:text="Mobile No. of Recipient"
        android:textSize="20dp"
        android:textColor="@color/DarkBlue"
        />


    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/recipient"
        android:id="@+id/phone"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:paddingLeft="20dp"
        android:hint="Enter 10-digit mobile number"
        android:textSize="20dp"
        android:background="@drawable/inputborder"
        android:maxLength="10"
        android:inputType="number"
        />

    <TextView
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/amt"
        android:layout_below="@+id/phone"
        android:layout_marginLeft="20dp"
        android:text="Amount in Rs."

        android:textSize="20dp"
        android:textColor="@color/DarkBlue"
        />


    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/amt"
        android:id="@+id/amount"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:paddingLeft="20dp"
        android:hint="Enter Amount"
        android:textSize="20dp"
        android:background="@drawable/inputborder"
        android:maxLength="10"
        android:inputType="number"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn"
        android:text="Log Out"
        android:layout_marginTop="120dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:textSize="30dp"
        android:textColor="@color/IndianRed"
        android:id="@+id/logout"
        />

</RelativeLayout>